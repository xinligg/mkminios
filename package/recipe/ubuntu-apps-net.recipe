# recipe file

[name]
apps-net

[package]
gftp-gtk
pidgin
synergy
quicksynergy
transmission-gtk

[action]
cp /usr/share/icons/hicolor/48x48/apps/pidgin.png /usr/share/pixmaps/pidgin.png;
cp /usr/share/pixmaps/gftp.png /usr/share/pixmaps/gftp.png.png

[binary]
/usr/bin/gftp
/usr/bin/gftp-gtk

/usr/bin/pidgin

/usr/bin/synergyc
/usr/bin/synergys
/usr/bin/quicksynergy

/usr/bin/transmission

[data]
/etc/gftp/
/usr/share/gftp/
/usr/share/applications/gftp.desktop
/usr/share/pixmaps/gftp.png.png

# FIXME: might be a good idea to strip some unneeded images and libraries to keep pidgin smaller
/usr/lib/pidgin/
/usr/share/applications/pidgin.desktop
/usr/share/pixmaps/pidgin.png
/usr/share/gconf/schemas/purple.schemas
/usr/share/indicators/messages/applications/pidgin
/usr/share/lintian/overrides/pidgin
/etc/purple/prefs.xml
/usr/share/pixmaps/pidgin/
/usr/share/sounds/purple/
/usr/lib/purple-2/

/usr/share/applications/quicksynergy.desktop

/usr/share/applications/transmission.desktop

[config]
/usr/share/pixmaps/quicksynergy.png

[overwrite]
