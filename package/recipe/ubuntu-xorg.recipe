mkdir $MKMINIOS_TARGET/var/tmp;
mkdir $MKMINIOS_TARGET/var/lib/xkb;

[binary]

/usr/bin/X
/usr/bin/Xorg

/usr/bin/xinit
/usr/bin/xauth
/usr/bin/mcookie
/usr/bin/startx

/usr/bin/cpp

[data]

/etc/X11
/usr/lib/xorg
